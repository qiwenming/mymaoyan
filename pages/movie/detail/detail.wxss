.detail{
  background-color: white;
  padding:16rpx;
}
.text text{
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient:vertical;
  transition:1s;
}

.btnParent{
  width: 100%;
}

.btnComm{
  margin:auto;
  margin-top: 10rpx;
  width: 48rpx;
  height: 24rpx;
  background-repeat: no-repeat;
}

.btnDown{
  background-image:url('../../../image/arrow_down.png');
}

.btnUp{
  background-image:url('../../../image/arrow_up.png');
}

.cmtDiving{
  background-color: white;
  margin-top: 40rpx;
  padding: 20rpx;
  border-bottom: 1px solid #cccccc;
  border-top: 1px solid #cccccc;
}
.cmtItem{
  background-color: white;
  padding-top: 20rpx;
  display: flex;
}
.circleImg image{
  margin-left: 20rpx;
  height: 80rpx;
  width: 80rpx;
  border-radius: 50%;
}
.cmtItemTextP{
  margin-left:20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #cccccc;
}
.cmtItemNNM{
  font-size: 14px;
