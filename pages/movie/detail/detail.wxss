/* pages/movie/detail/detail.wxss */

.titleBg {
  filter: blur(60rpx);
  width: 100%;
  height: 320rpx;
  z-index: -1;
  position: absolute;
}

.title {
  padding: 20rpx;
  width: 100%;
}

.title .titleContent {
  margin-right: 40rpx;
  display: flex;
}

.title .imgDetail {
  width: 200rpx;
  height: 300rpx;
}

.title .titleRight {
  padding-left: 20rpx;
  flex-direction: row;
}

.title .movieNm, .movieDur, .movieRt {
  margin-bottom: 20rpx;
  color: white;
}

.movieSc {
  margin-bottom: 20rpx;
  color: orange;
}

.imax {
  width: 100rpx;
  height: 60rpx;
}

.movieDur {
}

.movieRt {
}

.titleControl {
  margin-top: 10rpx;
  display: flex;
  margin-right: 40rpx;
}

.imgWish, .imgSc {
  width: 30rpx;
  height: 30rpx;
}

.title button {
  margin: 0rpx 10rpx;
  background: rgba(0, 0, 0, 0.4);
  color: white;
  flex: 1;
}

